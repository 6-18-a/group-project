
<form class="" action="/input" method="POST">
<h1>Create New Item<h1>

  <br>

    <label for="itemName">Item Name</label>
    <input type="text" name="itemName" class="form-control" id="itemName">

    <label for="itemprice">Item Price</label>
    <input type="number" name="price" class="form-control" id="itemprice" placeholder="$">
    <label for="adminprice">Admin Price</label>
    <input type="number" name="adminprice" class="form-control" id="adminprice" placeholder="$">

    <label for="itemInventory">inventory</label>
    <input type="number" name="amount" class="form-control" id="ItemInventory" placeholder="1">

    <label class="form-check-label" for="ItemDesc">Item Description</label>
    <textarea class="form-control" name="description" rows="5" id="ItemDesc"></textarea>

    <label for="itemimage">Item Image URL</label>
    <input type="file" name="itemimage" class="form-control">

  <br>

  <input type="submit" class="btn btn-primary btn-lg" value="Create Item"/>

</form>
